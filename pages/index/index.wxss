.container{
  display: flex;
  background-color: #99CCCC;
  height: 100%;
  width: 100%;
  flex-direction: column;
  color: white;
  font-size: 32rpx;
}

.banner-wrapper{
  flex: 0 0 30%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  text-align: center;
}

.tip{
  display: flex;
  justify-content: center;
  flex: 0 0 10%;
}

.tip-num{
  color: red;
}

.show{
  flex: 1;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.img{
  width: 200rpx;
  height: 200rpx;
  border: 4rpx solid #eee;
  padding: 10rpx;  
  border-radius: 10rpx;
  background-color: #fff;
}

.img-samll{
  width: 150rpx;
  height: 150rpx;
}

.control-wrapper{
  flex: 1;
  display: flex;
  justify-content: center;
}

.btn-warpper{
  width: 90%;
  height: 80%;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  background-color: #fff;
  padding: 10rpx;
}

.img-wrapper{
  display: flex;
  justify-content: space-between;
}

.btn-restart{
  background-color: #009966;
  width: 50%;
  display: flex;
  justify-content: center;
  align-self: center;
  margin-top: 20rpx;
  transition: all 1s;
}

.btn-restart:active{
  opacity: 0.5;
}